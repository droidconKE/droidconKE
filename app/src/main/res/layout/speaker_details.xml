<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/speakerImg"
            android:src="@drawable/profile"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_toEndOf="@id/speakerImg"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/speakerNameText"
                tools:text="@string/speaker_name"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <ImageView
                    android:id="@+id/twitterImg"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_twitter"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_toEndOf="@id/twitterImg"
                    android:layout_width="wrap_content"
                    android:id="@+id/speakerCompanyText"
                    tools:text="@string/speaker_company"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>