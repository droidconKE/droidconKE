#!/usr/bin/env node

'use strict';

var fs = require('fs');
var description = process.argv[2] || '.';
var property = process.argv[3] || 'version';
if (description != '.') description = 'node_modules/' + description;
var json = JSON.parse(fs.readFileSync(description + '/package.json', 'utf8'));
console.log(json[property]);
